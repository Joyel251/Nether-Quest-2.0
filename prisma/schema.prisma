generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Round1 {
  id          String  @id @default(cuid())
  teamNumber  Int     @unique
  question    String
  answer      String
  clue        String?
  Submitted   Boolean @default(false)

  @@map("round1")
}

model Round1Submission {
  id              String    @id @default(cuid())
  teamNumber      Int       @unique
  submissionTime  DateTime  @default(now())

  @@map("round1Submission")  
}

